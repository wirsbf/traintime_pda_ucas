<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for UCAS domains -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">ucas.ac.cn</domain>
        <domain includeSubdomains="true">sep.ucas.ac.cn</domain>
        <domain includeSubdomains="true">ehall.ucas.ac.cn</domain>
        <domain includeSubdomains="true">gkder.ucas.ac.cn</domain>
        <domain includeSubdomains="true">jwxk.ucas.ac.cn</domain>
        <domain includeSubdomains="true">xkgodj.ucas.ac.cn</domain>
    </domain-config>
    
    <!-- Default: allow HTTPS only for other domains -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
